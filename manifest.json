{
  "manifest_version": 3,
  "name": "Idea to Reality Extension",
  "version": "1.0",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "extension.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "ggg.png",
      "48": "ggg.png",
      "128": "ggg.png"
    }
  },
  "icons": {
    "16": "ggg.png",
    "48": "ggg.png",
    "128": "ggg.png"
  }
}